{
  "dependencies": {
    "chalk": "^2.3.0",
    "express": "^4.16.2",
    "npm-run-all": "^4.1.2"
  },
  "scripts": {
    "prestart": "node ./scripts/preMessage.js",
    "start": "npm-run-all --parallel security-check lint test:watch share inicial",
    "inicial": "node ./src/index.js ",
    "share": "lt --port 8080",
    "lint": "esw --fix --watch --color",
    "security-check": "nsp check",
    "test": "nyc --reporter=html mocha --reporter progress \"lib/**/*.test.js\" \"src/**/*.test.js\"",
    "test:watch": "npm run test -- --watch"
  },
  "devDependencies": {
    "eslint": "^4.11.0",
    "eslint-watch": "^3.1.3",
    "nyc": "^11.3.0",
    "mocha": "^4.0.1",
    "chai": "^4.1.2"
  }
}
